{
  "name": "ace_2022_team_d",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "backend": "yarn workspace backend",
    "frontend": "yarn workspace frontend",
    "build": "yarn backend build & yarn frontend build",
    "lint:fix": "yarn prettier:fix && yarn eslint:fix && yarn stylelint:fix",
    "lint:check": "yarn prettier:check && yarn eslint:check && yarn stylelint:check",
    "eslint:check": "eslint --max-warnings 0 --cache --cache-location ./node_modules/.cache/eslint --ignore-path .gitignore .",
    "eslint:fix": "eslint --max-warnings 0 --cache --cache-location ./node_modules/.cache/eslint --ignore-path .gitignore --fix .",
    "stylelint:check": "stylelint --cache --cache-location ./node_modules/.cache/stylelint --ignore-path .gitignore **/*.{css,tsx}",
    "stylelint:fix": "stylelint --cache --cache-location ./node_modules/.cache/stylelint --ignore-path .gitignore --fix **/*.{css,tsx}",
    "prettier:check": "prettier --cache --ignore-path .gitignore --list-different .",
    "prettier:fix": "prettier --cache --ignore-path .gitignore --write .",
    "postinstall": "husky install && yarn backend apigen && yarn frontend apigen"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@emotion/eslint-plugin": "^11.10.0",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-next": "^12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-array-func": "^3.1.7",
    "eslint-plugin-boundaries": "^2.10.1",
    "eslint-plugin-no-constructor-bind": "^2.0.4",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-regexp": "^1.8.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-sonarjs": "^0.14.0",
    "eslint-plugin-sort-class-members": "^1.14.1",
    "eslint-plugin-switch-case": "^1.1.2",
    "eslint-plugin-tailwindcss": "^3.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "stylelint": "^14.9.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-csstree-validator": "^2.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-group-selectors": "^1.0.9",
    "stylelint-high-performance-animation": "^1.6.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "typescript": "^4.7.2"
  }
}
